{
  "kind": "collectionType",
  "collectionName": "stories",
  "info": {
    "singularName": "story",
    "pluralName": "stories",
    "displayName": "Story",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "body": {
      "type": "richtext",
      "required": true
    },
    "introduction": {
      "type": "richtext",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": false,
      "minLength": 350
    },
    "issueMonth": {
      "type": "enumeration",
      "enum": [
        "Jannar",
        "Frar",
        "Marzu",
        "April",
        "Mejju",
        "Ġunju",
        "Lulju",
        "Awwissu",
        "Settembru",
        "Ottubru",
        "Novembru",
        "Diċembru"
      ],
      "required": true
    },
    "issueYear": {
      "type": "enumeration",
      "enum": [
        "s. 2023",
        "s. 2024",
        "s. 2025",
        "s. 2026",
        "s. 2027"
      ],
      "required": true
    },
    "pageUrl": {
      "type": "string",
      "unique": true,
      "maxLength": 120,
      "minLength": 3
    },
    "podcastUrl": {
      "type": "string",
      "minLength": 11,
      "maxLength": 256,
      "unique": true
    },
    "podcastNote": {
      "type": "richtext",
      "minLength": 30,
      "maxLength": 2500
    },
    "letters": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::letter.letter",
      "mappedBy": "stories"
    },
    "authors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "storiesAuthored"
    },
    "translators": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "storiesTranslated"
    },
    "illustrators": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "storiesIllustrated"
    },
    "photographers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "storiesPhotographed"
    },
    "readers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "storiesRead"
    },
    "endnote": {
      "type": "richtext"
    },
    "endPromos": {
      "type": "component",
      "repeatable": true,
      "component": "promotions.story-promo",
      "max": 3,
      "required": false,
      "min": 3
    },
    "language": {
      "type": "enumeration",
      "enum": [
        "العربية",
        "Català",
        "Deutsch",
        "English",
        "Español",
        "Euskara",
        "Français",
        "Hrvatski",
        "Italiano",
        "Malti"
      ],
      "default": "Malti"
    },
    "originalLanguage": {
      "type": "enumeration",
      "enum": [
        "العربية",
        "Català",
        "Deutsch",
        "English",
        "Español",
        "Euskara",
        "Français",
        "Hrvatski",
        "Italiano",
        "Malti"
      ],
      "default": "Malti"
    },
    "booksMentioned": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::book.book",
      "inversedBy": "mentions"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Esej",
        "Memoir",
        "Poeżija",
        "Reċensjoni",
        "Storja"
      ],
      "required": true
    },
    "collections": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::collection.collection",
      "mappedBy": "stories"
    },
    "appointment": {
      "type": "boolean",
      "default": false
    },
    "prominentMentions": {
      "type": "integer",
      "default": 3
    }
  }
}
