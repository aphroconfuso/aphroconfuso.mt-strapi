{
  "kind": "collectionType",
  "collectionName": "stories",
  "info": {
    "singularName": "story",
    "pluralName": "stories",
    "displayName": "Story",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "body": {
      "type": "richtext",
      "required": true
    },
    "introduction": {
      "type": "richtext",
      "required": false
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": false,
      "minLength": 350
    },
    "pageUrl": {
      "type": "string",
      "unique": true,
      "maxLength": 120,
      "minLength": 3
    },
    "podcastUrl": {
      "type": "string",
      "minLength": 11,
      "maxLength": 256,
      "unique": true
    },
    "podcastNote": {
      "type": "richtext",
      "minLength": 30,
      "maxLength": 2500
    },
    "letters": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::letter.letter",
      "mappedBy": "stories"
    },
    "authors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "storiesAuthored"
    },
    "translators": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "storiesTranslated"
    },
    "illustrators": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "storiesIllustrated"
    },
    "photographers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "storiesPhotographed"
    },
    "readers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "storiesRead"
    },
    "endnote": {
      "type": "richtext"
    },
    "endPromos": {
      "type": "component",
      "repeatable": true,
      "component": "promotions.story-promo",
      "max": 3,
      "required": false,
      "min": 3
    },
    "language": {
      "type": "enumeration",
      "enum": [
        "العربية",
        "Català",
        "Deutsch",
        "English",
        "Español",
        "Euskara",
        "Français",
        "Hrvatski",
        "Italiano",
        "Malti"
      ],
      "default": "Malti"
    },
    "originalLanguage": {
      "type": "enumeration",
      "enum": [
        "العربية",
        "Català",
        "Deutsch",
        "English",
        "Español",
        "Euskara",
        "Français",
        "Hrvatski",
        "Italiano",
        "Malti"
      ],
      "default": "Malti"
    },
    "booksMentioned": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::book.book",
      "inversedBy": "mentions"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Esej",
        "Memoir",
        "Poeżija",
        "Reċensjoni",
        "Storja",
        "Xiħaġa oħra"
      ],
      "required": true
    },
    "collections": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::collection.collection",
      "mappedBy": "stories"
    },
    "appointment": {
      "type": "boolean",
      "default": false
    },
    "prominentMentions": {
      "type": "integer",
      "default": 3
    },
    "coda": {
      "type": "richtext"
    },
    "postscript": {
      "type": "richtext"
    },
    "epigraphs": {
      "type": "component",
      "repeatable": true,
      "component": "quotes.epigraphs"
    },
    "promoImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "dateTimePublication": {
      "type": "datetime",
      "required": true
    },
    "publicationHistory": {
      "type": "richtext"
    },
    "promoImageMobile": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "showImagePromo": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "imagesPositionText": {
      "type": "string",
      "maxLength": 50
    }
  }
}
