{
  "kind": "collectionType",
  "collectionName": "stories",
  "info": {
    "singularName": "story",
    "pluralName": "stories",
    "displayName": "Story",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "versions": {
      "versioned": true
    }
  },
  "attributes": {
    "body": {
      "type": "richtext",
      "required": true
    },
    "introduction": {
      "type": "richtext",
      "required": false
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": false,
      "minLength": 350
    },
    "pageUrl": {
      "type": "string",
      "unique": true,
      "maxLength": 120,
      "minLength": 3
    },
    "podcastUrl": {
      "type": "string",
      "minLength": 11,
      "maxLength": 256,
      "unique": true
    },
    "podcastNote": {
      "type": "richtext"
    },
    "letters": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::letter.letter",
      "mappedBy": "stories"
    },
    "authors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "storiesAuthored"
    },
    "translators": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "storiesTranslated"
    },
    "illustrators": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "storiesIllustrated"
    },
    "photographers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "storiesPhotographed"
    },
    "readers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "storiesRead"
    },
    "endnote": {
      "type": "richtext"
    },
    "endPromos": {
      "type": "component",
      "repeatable": true,
      "component": "promotions.story-promo",
      "max": 3,
      "required": false,
      "min": 3
    },
    "language": {
      "type": "enumeration",
      "enum": [
        "العربية",
        "Català",
        "Deutsch",
        "English",
        "Español",
        "Euskara",
        "Français",
        "Hrvatski",
        "Italiano",
        "Malti"
      ],
      "default": "Malti"
    },
    "originalLanguage": {
      "type": "enumeration",
      "enum": [
        "العربية",
        "Català",
        "Deutsch",
        "English",
        "Español",
        "Euskara",
        "Français",
        "Hrvatski",
        "Italiano",
        "Malti"
      ],
      "default": "Malti"
    },
    "booksMentioned": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::book.book",
      "inversedBy": "mentions"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Djarju",
        "Esej",
        "Memoir",
        "Poddata",
        "Poeżija",
        "Reċensjoni",
        "Storja",
        "Terminu",
        "Xiħaġa oħra"
      ],
      "required": true
    },
    "collections": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::collection.collection",
      "mappedBy": "stories"
    },
    "appointment": {
      "type": "boolean",
      "default": false
    },
    "prominentMentions": {
      "type": "integer",
      "default": 0
    },
    "coda": {
      "type": "richtext"
    },
    "postscript": {
      "type": "richtext"
    },
    "epigraphs": {
      "type": "component",
      "repeatable": true,
      "component": "quotes.epigraphs"
    },
    "promoImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "dateTimePublication": {
      "type": "datetime",
      "required": true
    },
    "publicationHistory": {
      "type": "richtext",
      "required": true
    },
    "promoImageMobile": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "showImagePromo": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "imagesPositionText": {
      "type": "string",
      "maxLength": 50
    },
    "useSquareOnMobile": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "imagesType": {
      "type": "enumeration",
      "enum": [
        "Wisgħa tat-test",
        "Wisgħa tat-test 16:9",
        "Wisgħa tal-paġna 16:9"
      ],
      "default": "Wisgħa tat-test 16:9"
    },
    "useDefaultPodcastMessage": {
      "type": "boolean",
      "default": true
    },
    "triggerWarning": {
      "type": "richtext"
    },
    "imageBorderColour": {
      "pluginOptions": {
        "versions": {
          "versioned": true
        }
      },
      "type": "string",
      "maxLength": 7,
      "minLength": 7,
      "regex": "^#(?:[0-9a-fA-F]{3}){1,2}$"
    },
    "useSeparators": {
      "pluginOptions": {
        "versions": {
          "versioned": true
        }
      },
      "type": "boolean",
      "default": false
    },
    "useProseStyling": {
      "pluginOptions": {
        "versions": {
          "versioned": true
        }
      },
      "type": "boolean",
      "default": false
    },
    "dontUseDropCaps": {
      "pluginOptions": {
        "versions": {
          "versioned": true
        }
      },
      "type": "boolean",
      "default": false
    },
    "diaryDate": {
      "pluginOptions": {
        "versions": {
          "versioned": true
        }
      },
      "type": "date"
    },
    "sequence": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::sequence.sequence",
      "inversedBy": "stories"
    },
    "sequenceEpisodeNumber": {
      "pluginOptions": {
        "versions": {
          "versioned": true
        }
      },
      "type": "integer"
    },
    "podcastLengthMinutes": {
      "pluginOptions": {
        "versions": {
          "versioned": true
        }
      },
      "type": "integer"
    },
    "moreToCome": {
      "pluginOptions": {
        "versions": {
          "versioned": true
        }
      },
      "type": "boolean",
      "default": false
    },
    "audio": {
      "type": "component",
      "repeatable": true,
      "component": "promotions.audio"
    },
    "authorsType": {
      "type": "enumeration",
      "enum": [
        "solo: A",
        "kollaborazzjoni: A, B, C u D",
        "kollettiva: X [A, B, C, D]",
        "assistita: A ma B, C u D"
      ],
      "default": "solo: A"
    }
  }
}
