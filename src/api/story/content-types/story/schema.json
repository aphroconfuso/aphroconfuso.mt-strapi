{
  "kind": "collectionType",
  "collectionName": "stories",
  "info": {
    "singularName": "story",
    "pluralName": "stories",
    "displayName": "Story",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "body": {
      "type": "richtext",
      "required": true
    },
    "introduction": {
      "type": "richtext",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true,
      "maxLength": 300,
      "minLength": 270
    },
    "issueMonth": {
      "type": "enumeration",
      "enum": [
        "Jannar",
        "Frar",
        "Marzu",
        "April",
        "Mejju",
        "Ġunju",
        "Lulju",
        "Awwissu",
        "Settembru",
        "Ottubru",
        "Novembru",
        "Diċembru"
      ],
      "required": true
    },
    "issueYear": {
      "type": "enumeration",
      "enum": [
        "s. 2023",
        "s. 2024",
        "s. 2025",
        "s. 2026",
        "s. 2027"
      ],
      "required": true
    },
    "pageUrl": {
      "type": "string",
      "unique": true,
      "maxLength": 120,
      "minLength": 3,
      "regex": "/[a-zċġħż]+/"
