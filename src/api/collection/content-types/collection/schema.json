{
  "kind": "collectionType",
  "collectionName": "collections",
  "info": {
    "singularName": "collection",
    "pluralName": "collections",
    "displayName": "Collection",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "versions": {
      "versioned": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "body": {
      "type": "richtext"
    },
    "stories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::story.story",
      "inversedBy": "collections"
    },
    "sequences": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::sequence.sequence",
      "mappedBy": "collections"
    },
    "description": {
      "type": "text",
      "required": true,
      "minLength": 350
    },
    "promoImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "promoImageMobile": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "moreToCome": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "continuity": {
      "type": "text"
    }
  }
}
